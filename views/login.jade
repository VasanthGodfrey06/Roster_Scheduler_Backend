extends layout 

block content

    div(class="container-fluid py-4")
        div(class="jumbotron d-flex flex-column text-center align-items-center justify-content-center")
            h1 Log In to Roster Scheduler
            
            if(message)
                div(class="alert alert-danger") #{message}
            br

            div(class="card rounded shadow-lg col-6")
                div(class="card-body text-center")

                    form(method="POST", action="/login")
                        p Username 
                            input(type="text", name="username")
                            br

                        p Password 
                            input(type="password" name="password")
                            br

                        button(type="submit" class="btn btn-info mx-3 my-3") Go




